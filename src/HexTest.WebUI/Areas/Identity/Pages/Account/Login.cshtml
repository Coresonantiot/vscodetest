@page
@using HexTest.WebUI.Areas.Identity.Pages.Account
@using HexTest.WebUI.Utilities;

@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<main>
    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="card col-lg-8">
                            <div class="card-body">

                                <div class="d-flex justify-content-center py-4">
                                    <a href="/index" class="logo d-flex align-items-center w-auto">
                                        <img src="~/img/logo.png" alt="">
                                        <span class="d-none d-lg-block">@Html.Raw(@Common.ProjectProperties.get("ProjectCode"))</span>
                                    </a>
                                </div><!-- End Logo -->
                        
                                <div class="row">
                                    <div class="col-md-12">
                                        <section>
                                            <form id="account" method="post">
                                                <h5>Log in to your Account</h5>
                                                <hr />
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="col-12">
                                                    <label asp-for="Input.Email" class="form-label">User ID</label>
                                                    <input asp-for="Input.Email" class="form-control" autocomplete="off" aria-required="true" placeholder="you@somewhere.com" />
                                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                </div> 
                                                <div>&nbsp;</div>
                                                <div class="col-12">
                                                    <label asp-for="Input.Password" class="form-label">Password</label>
                                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="*********" />
                                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                                </div>
                                                <div>&nbsp;</div>
                                                <div>
                                                    <div class="checkbox">
                                                        <label asp-for="Input.RememberMe" class="form-label">
                                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                        </label>
                                                    </div>
                                                </div>
                                                <div>&nbsp;</div>
                                                <div>
                                                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                                                </div>
                                                <div>&nbsp;</div>
                                                <div>
                                                    <p>
                                                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                                    </p>                                           
                                                </div>
                                            </form>
                                        </section>
                                    </div>    
                                </div>

                            </div>
                        </div>

                        <div class="credits">
                            Made with <a href="https://www.aiscipro.com" target="_blank">aiscipro</a>
                        </div>

                    </div>
                    
                </div>
            </div>        
        </section>


    </div>
</main>

